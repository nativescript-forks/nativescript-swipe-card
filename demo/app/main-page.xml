<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
      xmlns:customControls="nativescript-swipe-card"
      loaded="pageLoaded" class="page">
    <StackLayout>
        <customControls:SwipeCard id="swipe" 
                                  height="90%"
                                  width="80%" 
                                  items="{{ stackItems }}" 
                                  layoutHeight="60" 
                                  layoutWidth="70"
                                  layoutBorderRadius="20"
                                  layoutBorderWidth="2"
                                  />
          <StackLayout>
                  <Label text="{{ message }}" class="t-20 text-center c-black" textWrap="true"/>
                  <Label text="{{ version }}" class="t-20 text-center c-black" textWrap="true"/>
          </StackLayout>
  </StackLayout>
</Page>